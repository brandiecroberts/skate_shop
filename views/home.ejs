<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/home.css" />
  <link rel="stylesheet" href="/styles/header.css" />
  <link rel="stylesheet" href="/styles/favouritebutton.css" />
  <link rel="stylesheet" href="/styles/productboxes.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/favouritesbutton.js"></script>
</head>

<body>
  <%- include('nav') %>

  <div class="header-main">
    <header class="header">
        <div class="header-name">
          <h2>Skateboarding is an art form,
            <br>a lifestyle and a sport</h2>
      </div>
  </header>
<br>

  <div class="body-title">
    <h1>Shop Products</h1>

    <div class="priceSlider">
      <h2>Filter By Price:</h2>

            <div class='min-max'>
              <div class='min'>
                <label>Min</label><span id="min-value">
                </span>
            </div>
            <div class="max">
              <label>Max</label><span id="max-value">
              </span>
            </div>
          </div>

        <div class="min-max-range">
          <input type="range" min="0" max="50"
          value="0" class="range" id="min">
          <input type="range" min="51" max="100"
          value="100" class="range" id="max">
        </div>
  </div>
</div>

<div class="listing-section">
    <% for (let item of data) { %>
      <div class="product">
        <div class="image-box">
          <div class="images" id="image-1"></div>
        </div>
        <div class="text-box">
          <h2 class="item"><%= item.title %></h2>

          <div class="parent">
            <div class="child">

          <% if (mapFavourites.includes(item.id)) { %>
            <input type="checkbox" id='<%= item.id %>' name="favourite-checkbox" value="favourite-button" checked="">
          <% } else { %>
            <input type="checkbox" id='<%= item.id %>' name="favourite-checkbox" value="favourite-button">
          <% } %>

              <label for='<%= item.id %>' class="container">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewbox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather-feather-heart">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                </svg>

                <div class="action">
                  <span data-item-id='<%= item.id %>' class="option-1"> Add to Favourites</span>
                  <span class="option-2">Added to Favourites</span>
                </div>

              </label>
            </div>
          </div>

          <h3 class="price">$<%= item.price %></h3>
          <p class="description"><%= item.description %></p>
          <a href="mailto:<%= item.email %>">
            <button type="button" name="sold-button" id="sold-button">Message Seller</button>
          </a>
        </div>
      </div>
    <% } %>
  </div>

</div>

</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Postings</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/mypostings.css" />
  <link rel="stylesheet" href="/styles/productboxes.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/public/scripts/app.js"></script>
  <script defer src="/db/queries/postings.js"></script>


</head>

<body>
  <%- include('nav') %>

  <div class="body-postings">
  <h1>My Postings</h1>
  <div class="newpost-button">
    <a href="/postings/new">Create New Post</a>
  </div>

  <div class="listing-section">
    <% for (let item of data) { %>
      <div class="product" id="posting-box">
        <div class="image-box">
          <div class="images" id="image-1"><%= item.photourl %></div>
        </div>
        <div class="text-box">
          <h2 class="item"><%= item.title %></h2>
          <h3 class="price"><%= item.price %></h3>
          <p class="description"><%= item.description %></p>
          <button type="button" name="delete-button" id="delete-button"></button>>Mark as Sold</button>

          <form form method="POST" action="/postings/<%= item.id %>/delete">
            <button type="submit" name="delete-button" id="delete-button">Delete Post</button>
          </form>


        </div>
      </div>
    <% } %>
  </div>

</div>


</body>

</html>

<!DOCTYPE html>
<html lang="en">

<head>
  <title>My Postings</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/nav.css" />
  <link rel="stylesheet" href="/styles/mypostings.css" />
  <link rel="stylesheet" href="/styles/productboxes.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/public/scripts/mypostings.js"></script>

  <script>
    // event listener for delete button
    const deleteButton = document.getElementById("delete-button");
    deleteButton.addEventListener("click", () => {
      // get the ID of the item to be deleted

      // send an AJAX request to the server
      fetch(`/mypostings/${itemId}/delete`, {
        method: "POST"
      })
      .then(response => {
        if (response.ok) {
          // reload the page after the item has been deleted
          window.location.reload();
        } else {
          console.log("Error deleting item.");
        }
      })
      .catch(error => {
        console.log(error);
      });
    });
  </script>

</head>

<body>
  <%- include('nav') %>

  <div class="body-postings">
  <h1>My Postings</h1>
  <div class="newpost-button">
    <a href="/postings/new">Create New Post</a>
  </div>

  <div class="listing-section">
    <% for (let item of data) { %>
      <div class="product">
        <div class="image-box">
          <div class="images" id="image-1"></div>
        </div>
        <div class="text-box">
          <h2 class="item"><%= item.title %></h2>
          <h3 class="price"><%= item.price %></h3>
          <p class="description"><%= item.description %></p>
          <button type="button" name="delete-button" id="delete-button">Mark as Sold</button>
          <button type="button" name="mark-as-sold-button" id="mark-as-sold-button">Delete Post</button>

        </div>
      </div>
    <% } %>

</div>


</body>

</html>
